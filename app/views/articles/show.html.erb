
<h2><%= @article.title %></h2>
<br>
<p><%= @article.content %></p>


<div class="text-center">
  <%= link_to "View All Articles", articles_path,
  class: "btn btn-primary text-center" %>
  <%= link_to "Edit This Article", edit_article_path,
  class: "btn btn-primary text-center" %>
  <%= link_to "Delete", article_path(@article),
  class: "btn btn-primary text-center",
  method: :delete,
  data: { confirm: "Are you sure?" } %>
</div>
